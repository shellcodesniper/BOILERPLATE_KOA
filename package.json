{
  "name": "BOILERPLATE",
  "version": "0.1.0",
  "description": "boilerplates for koa backend",
  "main": "bin/www.ts",
  "repository": "git@github.com:shellcodesniper/BOILERPLATE_KOA.git",
  "author": "KuuWangE <shellcodesniper@icloud.com>",
  "license": "GPG3",
  "scripts": {
    "test": "TS_NODE_PROJECT='./tsconfig.json' mocha -r node_modules/ts-node/register - r tsconfig-paths/register ./bin/*.spec.ts ./src/**/*.spec.ts",
    "clean": "rm -rf ./dist",
    "lint": "eslint . --ext .ts",
    "prestart": "yarn clean;yarn build",
    "start": "NODE_ENV=production nodemon -r ./tsconfig-paths-bootstrap.js dist/bin/www.js",
    "prebuild": "yarn checkOnly && yarn clean; echo '정상'",
    "build": "tsc --project ./tsconfig.build.json",
    "postbuild": "cp -rf ./public ./dist/ && echo 'Include Public To Dist Done.'",
    "_run": "nodemon -r tsconfig-paths/register --watch src --delay 2 --exec 'ts-node' ./bin/www.ts",
    "dev": "NODE_PATH=src NODE_ENV=development yarn _run",
    "prod": "NODE_PATH=src NODE_ENV=production yarn _run",
    "debug": "NODE_PATH=src NODE_ENV=development DEBUG=* yarn _run",
    "docker:start": "NODE_ENV=production pm2-docker start ./dist/bin/www.js --node-arg=\"-r ./tsconfig-paths-bootstrap.js\" -i max",
    "vpatch": "clear;npm version patch --no-git-tag-version",
    "vminor": "clear;npm version minor --no-git-tag-version",
    "vmajor": "clear;npm version major --no-git-tag-version"
  },
  "dependencies": {
    "aws-sdk": "^2.996.0",
    "cookie-parser": "^1.4.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.3",
    "koa-body": "^4.2.0",
    "koa-compress": "^5.1.0",
    "koa-connect": "^2.1.0",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "mongoose": "^6.0.8",
    "mysql2": "^2.3.0",
    "pbkdf2": "^3.1.2",
    "triple-beam": "^1.3.0",
    "tsconfig-paths": "^3.11.0",
    "typeorm": "^0.2.37",
    "typescript": "^4.4.3",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-mount": "^4.0.1",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^16.10.1",
    "@types/pbkdf2": "^3.1.0",
    "@types/triple-beam": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "nodemon": "^2.0.13",
    "ts-node": "^10.2.1"
  }
}
