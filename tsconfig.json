{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJs",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    
    "moduleResolution": "node",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@redis/*": ["src/redis/*"],
      "@router/*": ["src/routers/*"],
      "@logger": ["src/logger/logger"],
      "@root/*": ["./*"],
      "@configs/*": ["config/*"],
      "$types/*": ["src/@types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "documents"
  ],
  "include": [
    "bin/*.spec.ts",
    "bin/*.ts",
    "config/*.json",
    "config/*.ts",
    "src/**/*",
    "./package.json",
    "src/@types/*",
  ]
}